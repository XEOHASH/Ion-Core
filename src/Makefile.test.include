TESTS += test/test_ion test/bitcoin-util-test.py
bin_PROGRAMS += test/test_ion
TEST_SRCDIR = test
TEST_BINARY=test/test_ion$(EXEEXT)

JSON_TEST_FILES = \
  test/data/base58_keys_valid.json \
  test/data/base58_encode_decode.json \
  test/data/base58_keys_invalid.json
  
GENERATED_TEST_FILES = $(JSON_TEST_FILES:.json=.json.h)

BITCOIN_TESTS =\
  test/accounting_tests.cpp \
  test/base58_tests.cpp \
  test/key_tests.cpp \
  test/uint160_tests.cpp \
  test/allocator_tests.cpp \
  test/base64_tests.cpp \
  test/getarg_tests.cpp \
  test/mruset_tests.cpp \
  test/serialize_tests.cpp \
  test/uint256_tests.cpp \
  test/base32_tests.cpp \
  test/bignum_tests.cpp \
  test/Checkpoints_tests.cpp \
  test/hmac_tests.cpp \
  test/netbase_tests.cpp \
  test/sigopcount_tests.cpp
  
if ENABLE_WALLET
BITCOIN_TESTS += \
  test/accounting_tests.cpp \
  test/wallet_tests.cpp
endif

test_test_ion_SOURCES = $(BITCOIN_TESTS) $(JSON_TEST_FILES)
test_test_ion_CPPFLAGS = $(BITCOIN_INCLUDES) -I$(builddir)/test/ $(TESTDEFS)
test_test_ion_LDADD = $(LIBBITCOIN_SERVER) $(LIBBITCOIN_CLI) $(LIBBITCOIN_COMMON) $(LIBBITCOIN_UTIL) $(LIBBITCOIN_CRYPTO) $(LIBBITCOIN_UNIVALUE) $(LIBLEVELDB) $(LIBMEMENV) \
  $(BOOST_LIBS) $(BOOST_UNIT_TEST_FRAMEWORK_LIB) $(LIBSECP256K1)
if ENABLE_WALLET
test_test_ion_LDADD += $(LIBBITCOIN_WALLET)
endif

test_test_ion_LDADD += $(LIBBITCOIN_CONSENSUS) $(BDB_LIBS) $(SSL_LIBS) $(CRYPTO_LIBS) $(MINIUPNPC_LIBS)
test_test_ion_LDFLAGS = $(RELDFLAGS) $(AM_LDFLAGS) $(LIBTOOL_APP_LDFLAGS) -static

nodist_test_test_ion_SOURCES = $(GENERATED_TEST_FILES)

$(BITCOIN_TESTS): $(GENERATED_TEST_FILES)

CLEAN_BITCOIN_TEST = test/*.gcda test/*.gcno $(GENERATED_TEST_FILES)

CLEANFILES += $(CLEAN_BITCOIN_TEST)

ion_test: $(TEST_BINARY)

ion_test_check: $(TEST_BINARY) FORCE
	$(MAKE) check-TESTS TESTS=$^

ion_test_clean : FORCE
	rm -f $(CLEAN_BITCOIN_TEST) $(test_test_ion_OBJECTS) $(TEST_BINARY)

check-local:
	$(AM_V_at)$(MAKE) $(AM_MAKEFLAGS) -C secp256k1 check

%.json.h: %.json
	@$(MKDIR_P) $(@D)
	@echo "namespace json_tests{" > $@
	@echo "static unsigned const char $(*F)[] = {" >> $@
	@$(HEXDUMP) -v -e '8/1 "0x%02x, "' -e '"\n"' $< | $(SED) -e 's/0x  ,//g' >> $@
	@echo "};};" >> $@
	@echo "Generated $@"

%.raw.h: %.raw
	@$(MKDIR_P) $(@D)
	@echo "namespace alert_tests{" > $@
	@echo "static unsigned const char $(*F)[] = {" >> $@
	@$(HEXDUMP) -v -e '8/1 "0x%02x, "' -e '"\n"' $< | $(SED) -e 's/0x  ,//g' >> $@
	@echo "};};" >> $@
	@echo "Generated $@"
